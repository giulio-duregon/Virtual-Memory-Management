    "version": "0.2.0",
    "configurations": [
        {
            "name": "FIFO Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [
                "-f",
                "16",
                "-o",
                "aOPFS",
                "-a",
                "e",
                "in3",
                "rfile"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            // "preLaunchTask": "make clean && make"
        }
    ]
}